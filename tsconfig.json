{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["*"],
      "@src/*": ["src/*"],
      "@images/*": ["src/img/*"],
      "@icons/*": ["src/components/icons/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@data/*": ["src/data/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".git", "public"]
}