---
import type { Color } from '../types.d'
import Block from '@src/components/SectionBlock.astro'
import Layout from './SectionLayout.astro'
import '../sass/web.scss'

interface Props {
	title: string
	img: ImageMetadata
	color: Color
}

const { title, color, img } = Astro.props
---

<Layout>
	<Block title={title} img={img} color={color}>
		<slot />
	</Block>
</Layout>
