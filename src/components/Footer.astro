<style lang="scss">
	footer {
		position: relative;

		&::before,
		&::after {
			content: '';
			display: block;
			position: absolute;
			width: 100%;
			left: 0em;
		}

		&::before {
			top: -3em;
			height: 3.1rem;
			@apply bg-sky-500;
			clip-path: ellipse(55% 100% at center 130%);
		}
		&::after {
			top: -2rem;
			height: 2.2rem;
			@apply bg-sky-700;
			clip-path: ellipse(55% 100% at center 130%);
		}
	}
</style>
