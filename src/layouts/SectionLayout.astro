---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { ViewTransitions } from 'astro:transitions'

interface Props {
	lang?: string
	title?: string
	classes?: string[]
}

const { title, lang, classes = [] } = Astro.props
import '../sass/web.scss'
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<title>{title}</title>
		<ViewTransitions />
	</head>

	<body id="home" class="bg-sky-700">
		<Header />

		<main class:list={['mx-auto max-w-[1400px] bg-white px-4 pb-20 pt-10 lg:px-8 xl:px-16', ...classes]}>
			<slot />
		</main>

		<Footer />
	</body>
</html>
